<?xml version='1.0' encoding='UTF-8'?>
<!-- package name must be unique so suffix with "tests" so package loader doesn't ignore us -->
<manifest package='com.retromocha.obvious.status.tests' android:versionCode='1' android:versionName='1.0' xmlns:android='http://schemas.android.com/apk/res/android'>
    <!-- We add an application tag here just so that we can indicate that
         this package needs to link against the android.test library,
         which is needed when building test cases. -->
    <application android:icon='@drawable/ic_launcher'>
        <uses-library android:name='android.test.runner'/>
    </application>
    <!--
    This declares that this application uses the instrumentation test runner targeting
    the package of com.retromocha.obvious.status.  To run the tests use the command:
    "adb shell am instrument -w com.retromocha.obvious.status.tests/android.test.InstrumentationTestRunner"
    -->
    <instrumentation android:label='Tests for com.retromocha.obvious.status' android:name='org.ruboto.test.InstrumentationTestRunner' android:targetPackage='com.retromocha.obvious.status'/>
</manifest>